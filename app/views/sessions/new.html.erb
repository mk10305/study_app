<div class="page-header">

 <h1> Please Log in</h1>
</div> 


     <%= form_tag '/login',:html => { :class => "form-horizontal" } do %>

  <div class="form-group">
     <%= label_tag :username , 'Username', class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
          <%= text_field_tag :username, ' ',  class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
 <%= label_tag :password , 'Password', class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
        <%= password_field_tag :password, '', class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
       <%= submit_tag "Login", class: 'btn btn-default login' %>
    </div>


<% end %>

</div>


