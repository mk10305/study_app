<%= render 'shared/content_title', title: "New Course" %>


<%= render 'shared/errors', obj: @category %>


  <div class='well'>
<%= form_for @category, :html => { :class => "form-horizontal" }  do |f| %>
  <div class="form-group">
     <%= f.label :name , 'Name', class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit "Create Course", class: 'btn btn-default' %>
    </div>


  <% end %>
</div>
</div>