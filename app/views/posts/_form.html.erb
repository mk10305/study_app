<%= render 'shared/errors', obj: @post %>


<%= form_for @post, :html => { :class => "form-horizontal" }  do |f| %>
  <div class="form-group">
     <%= f.label :title , 'Title', class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
 <%= f.label :description , 'Description', class: 'col-sm-2 control-label'%>
    <div class="col-sm-10">
        <%= f.text_area :description, rows: 5, class: 'form-control' %>
    </div>
  </div>

<div class="form-group">
    <%= f.label "Categories", class: 'col-sm-2 control-label' %>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>

  <%= cb.label(class: "checkbox-inline") {cb.check_box(class: "checkbox") + cb.text} %>
  <% end %>
</label>
</div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-default')%>
    </div>


  <% end %>
</div>
